@page "/"
@using TDDStackExample.Shared.Models

@inject HttpClient Client

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

<input type="email" placeholder="email" @bind="Model.Email"/>
<input type="password" placeholder="passworde" @bind="Model.Password"/>
<input type="number" placeholder="age" @bind="Model.Number"/>
<button @onclick="Send">"Envoyé Mdrrrr jpp !"</button>

@code
{
    public InscriptionModel Model = new();

    private void Send()
    {
        Client.PostAsJsonAsync("api/Index/", Model);
    }
}